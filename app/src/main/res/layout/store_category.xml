<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="storeCat"
            type="com.math3249.listler.model.StoreCategoryWithCategoryName" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        style="@style/Theme.Listler.CardLayout">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/category_name"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/Theme.Listler.Category.Item.TextView"
        android:layout_marginTop="@dimen/standard_margin"
        android:text="@{storeCat.categoryName}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        tools:text="Name"/>
    <TextView
        android:id="@+id/category_id"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/Theme.Listler.Category.Item.TextView"
        android:layout_marginTop="@dimen/standard_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/category_name"
        tools:text="Name"/>
    <TextView
        android:id="@+id/category_sort_order"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        style="@style/Theme.Listler.Category.Item.TextView"
        android:layout_marginTop="@dimen/standard_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/category_id"
        tools:text="Name"/>
    <!--
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/dividerHorizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/category_name"
        app:layout_constraintStart_toStartOf="parent" />
-->
</androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>