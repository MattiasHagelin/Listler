<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Listler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Listler.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Listler.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Listler.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Listler.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Listler.ExposedDropdownMenu</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="endIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="ThemeOverlay.Listler.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="colorError">@color/design_default_color_error</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Listler.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Listler.Caption</item>
        <item name="autoCompleteTextViewStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

    <style name="TextAppearance.Listler.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextAppearance.Listler.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="ShapeAppearance.Listler.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

</resources>