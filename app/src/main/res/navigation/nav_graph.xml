<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/listOverviewFragment">

    <fragment
        android:id="@+id/listOverviewFragment"
        android:name="com.math3249.listler.ui.fragment.ListOverviewFragment"
        android:label="Listler"
        tools:layout="@layout/fragment_list_overview">
        <action
            android:id="@+id/action_listOverviewFragment_to_addListFragment"
            app:destination="@id/addListFragment" />
        <action
            android:id="@+id/action_listOverviewFragment_to_storesFragment"
            app:destination="@id/storesFragment" />
        <action
            android:id="@+id/action_listOverviewFragment_to_listDetailsTabFragment2"
            app:destination="@id/listDetailsTabFragment" />
    </fragment>
    <fragment
        android:id="@+id/addListFragment"
        android:name="com.math3249.listler.ui.fragment.AddListFragment"
        android:label="Listler"
        tools:layout="@layout/fragment_add_list">
        <action
            android:id="@+id/action_addListFragment_to_listOverviewFragment"
            app:destination="@id/listOverviewFragment"
            app:popUpTo="@id/listOverviewFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_addListFragment_to_listDetailsTabFragment"
            app:destination="@id/listDetailsTabFragment"
            app:popUpTo="@id/listOverviewFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addItemFragment"
        android:name="com.math3249.listler.ui.fragment.AddItemFragment"
        android:label="AddItemFragment" >
        <action
            android:id="@+id/action_addItemFragment_to_addCategoryFragment"
            app:destination="@id/addCategoryFragment" />
        <action
            android:id="@+id/action_addItemFragment_to_listDetailsTabFragment"
            app:destination="@id/listDetailsTabFragment"
            app:popUpTo="@id/listDetailsTabFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="addItemData"
            app:argType="com.math3249.listler.ui.fragment.navargs.AddItemArgs" />
    </fragment>
    <fragment
        android:id="@+id/addCategoryFragment"
        android:name="com.math3249.listler.ui.fragment.AddCategoryFragment"
        android:label="fragment_add_category"
        tools:layout="@layout/fragment_add_category" >
        <action
            android:id="@+id/action_addCategoryFragment_to_addItemFragment"
            app:destination="@id/addItemFragment"
            app:popUpTo="@id/addItemFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="listId"
            app:argType="long" />
        <argument
            android:name="itemId"
            app:argType="long" />
        <argument
            android:name="itemName"
            app:argType="string" />
        <argument
            android:name="categoryId"
            app:argType="long" />
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/storesFragment"
        android:name="com.math3249.listler.ui.fragment.StoresFragment"
        android:label="fragment_stores"
        tools:layout="@layout/fragment_stores" >
        <action
            android:id="@+id/action_storesFragment_to_listOverviewFragment"
            app:destination="@id/listOverviewFragment"
            app:popUpTo="@id/listOverviewFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_storesFragment_to_storeDetailsFragment"
            app:destination="@id/storeDetailsFragment" />
        <action
            android:id="@+id/action_storesFragment_to_addStoreFragment"
            app:destination="@id/addStoreFragment" />
    </fragment>
    <fragment
        android:id="@+id/storeDetailsFragment"
        android:name="com.math3249.listler.ui.fragment.StoreDetailsFragment"
        android:label="StoreDetailsFragment" >
        <action
            android:id="@+id/action_storeDetailsFragment_to_storesFragment"
            app:destination="@id/storesFragment"
            app:popUpTo="@id/storesFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="storeId"
            app:argType="long" />
        <argument
            android:name="storeName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addStoreFragment"
        android:name="com.math3249.listler.ui.fragment.AddStoreFragment"
        android:label="fragment_add_store"
        tools:layout="@layout/fragment_add_store" >
        <action
            android:id="@+id/action_addStoreFragment_to_storeDetailsFragment"
            app:destination="@id/storeDetailsFragment"
            app:popUpTo="@id/storesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/listDetailsTabFragment"
        android:name="com.math3249.listler.ui.fragment.ListDetailsTabFragment"
        android:label="ListDetailsTabFragment" >
        <action
            android:id="@+id/action_listDetailsTabFragment_to_addItemFragment"
            app:destination="@id/addItemFragment"
            app:popUpTo="@id/addItemFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_listDetailsTabFragment_to_listOverviewFragment"
            app:destination="@id/listOverviewFragment"
            app:popUpTo="@id/listOverviewFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="listData"
            app:argType="com.math3249.listler.ui.fragment.navargs.ListDetailsArgs" />
    </fragment>
</navigation>